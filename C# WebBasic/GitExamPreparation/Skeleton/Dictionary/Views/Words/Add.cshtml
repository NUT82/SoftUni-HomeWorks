<h1 class="text-center mt-2">Add word to dictionary</h1>
<hr class="bg-primary w-75">
<form class="mx-auto w-50" method="post">
    <div class="form-group">
        <div class="text-dark d-flex justify-content-center">
            <label for="name" class="h3 mb-2">Word</label>
        </div>
        <input type="text" class="form-control" id="word" name="word" />
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-block btn-primary text-white mb-3">Add</button>
    </div>
</form>